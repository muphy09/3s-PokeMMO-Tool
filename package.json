{
  "name": "pokemmo-tool",
  "version": "1.4.0",
  "private": true,
  "description": "3's PokeMMO Tool â€” For Blueberries",
  "author": "3",

  "main": "electron/main.js",

  "scripts": {
    "dev": "vite",
    "dev:app": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",

    "build": "vite build",

    "start": "electron .",

    "build:helper": "powershell -ExecutionPolicy Bypass -File ./scripts/build-live-helper.ps1",

    "clean": "rimraf dist release",

    "dist": "electron-builder",                       // CI uses this

    "pack": "npm run clean && npm run build:helper && npm run build && electron-builder --win nsis,zip", 
    "pack:dir": "npm run clean && npm run build:helper && npm run build && electron-builder --dir"
  },

  "build": {
    "appId": "com.pokemmo.tool",
    "productName": "3's PokeMMO Tool",

    "directories": {
      "app": ".",
      "output": "dist",                               // <-- align with workflow
      "buildResources": "resources"
    },

    "asar": true,

    "extraMetadata": {
      "main": "electron/main.js"
    },

    "files": [
      {
        "from": ".",
        "filter": [
          "dist/**",                                  // frontend build output from Vite
          "electron/**",
          "assets/**",
          "package.json",
          "resources/**"
        ]
      },
      "!resources/live-helper/**",                    // moved to extraResources
      "!**/*.map"
    ],

    "extraResources": [
      {
        "from": "resources/live-helper",
        "to": "live-helper",
        "filter": ["**/*"]
      },
      {
        "from": "LiveRouteOCR",
        "to": "LiveRouteOCR",
        "filter": ["**/*"]
      },
      {
        "from": "resources/icon.ico",
        "to": "icon.ico"
      }
    ],

    "win": {
      "icon": "resources/icon.ico",
      "target": [
        { "target": "nsis", "arch": ["x64"] },       // installer .exe
        { "target": "zip",  "arch": ["x64"] }        // portable zip
      ]
    },

    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",

    "publish": [
      {
        "provider": "github",
        "owner": "muphy09",
        "repo": "3s-PokeMMO-Tool"
      }
    ]
  },

  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },

  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^8.2.2",
    "electron": "^30.0.8",
    "electron-builder": "^24.13.3",
    "rimraf": "^5.0.10",
    "vite": "^5.4.0",
    "wait-on": "^7.2.0"
  }
}
