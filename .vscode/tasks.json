{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Release Patch- x.x.0",
      "type": "shell",
      "command": "npm",
      "args": ["run", "release:patch"],
      "problemMatcher": []
    },
    {
      "label": "Release Minor - x.0.x",
      "type": "shell",
      "command": "npm",
      "args": ["run", "release:minor"],
      "problemMatcher": []
    },
    {
      "label": "Release Major - 0.x.x",
      "type": "shell",
      "command": "npm",
      "args": ["run", "release:major"],
      "problemMatcher": []
    },
    {
      "label": "Check Total Downloads",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-NoProfile",
        "-File",
        "./Get-GHReleaseDownloads.ps1"
    ],
      "options": {
        "cwd": "${workspaceFolder}"
     },
      "problemMatcher": []
    }
  ]
}
